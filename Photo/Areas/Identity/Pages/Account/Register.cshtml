@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>


<h1>@ViewData["Title"]</h1>
<main class="page registration-page">
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading">
                <h2 class="text-info">registration</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc quam urna, dignissim nec auctor in,
                    mattis vitae leo.</p>
            </div>
            <form method="post">
                <div class="mb-3"><label class="form-label" asp-for="Input.Email" >Email</label><input asp-for="Input.Email" autocomplete="Email" class="form-control item" type="text" id="name"></div>
                <div class="mb-3"><label class="form-label" asp-for="Input.Name">Name</label><input  asp-for="Input.Name" autocomplete="Name" class="form-control item"  type="text" id="Name"></div>
                <div class="mb-3"><label class="form-label" asp-for="Input.Password">Password</label><input  asp-for="Input.Password"  class="form-control item"  id="password"></div>
                <div class="mb-3"><label class="form-label" asp-for="Input.ConfirmPassword">Confirm password</label><input  asp-for="Input.ConfirmPassword"  class="form-control item"  id="confirmPassword"></div>

                @Html.ValidationMessage("cv")

                <button class="btn btn-primary" type="submit">Sign In</button>
            </form>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
